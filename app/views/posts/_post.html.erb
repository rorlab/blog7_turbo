<div id="<%= dom_id post %>" class="animate__animated" data-animate-in="animate__bounceIn" data-animate-out="animate__bounceOut">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= post.content %>
  </p>

  <p>
    <%= link_to "Show this post", post %> |
    <%= link_to "Destroy this post", post, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
  </p>

</div>
